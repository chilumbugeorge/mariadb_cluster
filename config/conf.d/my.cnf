[server]

# this is only for the mysqld standalone daemon
[mysqld]

# ** Basic Settings **

pid-file                = /run/mysqld/mysqld.pid
basedir                 = /usr
datadir                 = /var/lib/mysql
tmpdir                  = /tmp
lc-messages-dir         = /usr/share/mysql
lc-messages             = en_US
skip-external-locking
character-set-server    = utf8mb4
collation-server        = utf8mb4_general_ci
#bind-address            = 127.0.0.1

# ** Fine Tuning **

max_allowed_packet     = 1G
max_connections        = 2600

# ** Logging and Replication
server-id              = 3   # 2 on master-2
log_bin                = /var/lib/mysql/mysql-bin.log
expire_logs_days       = 7
log_slave_updates      = 1
gtid_domain_id         = 3   # 2 on master-2
auto_increment_increment = 2
auto_increment_offset  = 3   # 2 on master-2


# ** Logging **
log_error = /var/log/mysql/error.log
slow_query_log_file    = /var/lib/mysql/mariadb-slow.log
slow_query_log         = 1
long_query_time        = 1


# ** SSL/TLS

# For documentation, please read
# https://mariadb.com/kb/en/securing-connections-for-client-and-server/
#ssl-ca = /etc/mysql/cacert.pem
#ssl-cert = /etc/mysql/server-cert.pem
#ssl-key = /etc/mysql/server-key.pem


# ** InnoDB **

innodb_buffer_pool_size        = 1G    # 60 - 70% of Toral RAM
innodb_flush_log_at_trx_commit = 2
innodb_flush_method            = O_DIRECT
innodb_io_capacity             = 2000
#innodb_log_file_size           = 1G
innodb_print_all_deadlocks     = 1
innodb_thread_concurrency      = 0
innodb_read_io_threads         = 64
innodb_write_io_threads        = 64

# this is only for embedded server
[embedded]

[mariadb]

[mariadb-10.5.4]
